{
  "expo": {
    "name": "Ora - Find Yourself",
    "slug": "ora-app",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "ora",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.AliKemalAkpinar.OraApp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Ora uses your camera to add photos to your journal entries.",
        "NSMicrophoneUsageDescription": "Ora uses your microphone for voice journaling.",
        "NSPhotoLibraryUsageDescription": "Ora needs access to your photos to add images to your journal.",
        "NSLocationWhenInUseUsageDescription": "Ora uses your location to add context to your journal entries."
      }
    },
    "android": {
      "package": "com.AliKemalAkpinar.OraApp",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      "expo-localization",
      "expo-router",
      [
        "expo-haptics"
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "alikemalakpinar"
  }
}
